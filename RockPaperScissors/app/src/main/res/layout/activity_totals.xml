<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33cc33"
    tools:context=".ActivityTotals">

    <TextView
        android:id="@+id/textViewTitleTotals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleTotals"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <LinearLayout
        android:id="@+id/linearLayoutTotalWins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleTotals">


        <!--Computer wins -->
        <LinearLayout
            android:id="@+id/linearLayoutComputerWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textViewComputerWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/computerChoice"
                android:textColor="#000000"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/textViewComputerWinsDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_marginLeft="40dp">

            </TextView>


        </LinearLayout>


        <!--User wins -->
        <LinearLayout
            android:id="@+id/linearLayoutUserWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textViewUserWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userChoice"
                android:textColor="#000000"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/textViewUserWinsDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_marginLeft="40dp">

            </TextView>


        </LinearLayout>


        <!--Ties -->
        <LinearLayout
            android:id="@+id/linearLayoutTies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textViewTies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ties"
                android:textColor="#000000"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/textViewTiesDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_marginLeft="40dp">

            </TextView>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/buttonBackToMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTotalWins" />


</androidx.constraintlayout.widget.ConstraintLayout>